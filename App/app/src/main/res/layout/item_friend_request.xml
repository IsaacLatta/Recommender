<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Display the request user's name -->
        <TextView
            android:id="@+id/tvRequestUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request User"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!-- Approve icon (using a vector drawable, e.g., ic_approve) -->
        <ImageButton
            android:id="@+id/btnApproveRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_approve"
            android:contentDescription="Approve Request"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="8dp" />

        <!-- Deny icon (using a vector drawable, e.g., ic_deny) -->
        <ImageButton
            android:id="@+id/btnDenyRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btnApproveRequest"
            android:src="@drawable/ic_deny"
            android:contentDescription="Deny Request"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="8dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
